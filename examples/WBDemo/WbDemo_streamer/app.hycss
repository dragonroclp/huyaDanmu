.container {
  flex: 1;
  background-color: #fff;
  padding: 10px;
}

.title {
  font-size: 50px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

.section {
  flex-direction: row;
  background-color: #eee;
  margin-bottom: 10px;
}

.label {
  flex: 1;
  line-height: 80px;
}

.input {
  flex: 3;
  border: 1px solid #ccc;
}

.button {
  flex: 1;
}

.data {
  font-size: 100px;
  text-align: center;
}
